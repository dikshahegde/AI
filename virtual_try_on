FROM ubuntu:20.04

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget -O /app/IC_TRY_ON_v3_e4.safetensors https://huggingface.co/camenduru/FLUX.1-dev/resolve/f2fc30eef374ff8311a6796aa4ab9c6fea774075/IC_TRY_ON_v3_e4.safetensors && \
    wget -O /app/turbo_alpha.safetensors https://huggingface.co/alimama-creative/FLUX.1-Turbo-Alpha/resolve/main/diffusion_pytorch_model.safetensors

RUN pip3 install torch safetensors

COPY . /app

CMD ["bash"]
