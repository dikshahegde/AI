FROM ubuntu:20.04

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget -O /app/CLAYMATE_V2.03_.safetensors https://huggingface.co/nerualdreming/Best_LoRas_Mar24/resolve/main/CLAYMATE_V2.03_.safetensors && \
    wget -O /app/DD-made-of-clay-XL-v2.safetensors https://huggingface.co/DoctorDiffusion/doctor-diffusion-s-claymation-style-lora/resolve/main/DD-made-of-clay-XL-v2.safetensors

RUN pip3 install torch safetensors

COPY . /app

CMD ["bash"]
