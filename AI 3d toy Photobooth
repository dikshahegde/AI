FROM ubuntu:20.04

RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

RUN wget -O /app/turbo_alpha.safetensors https://huggingface.co/alimama-creative/FLUX.1-Turbo-Alpha/resolve/main/diffusion_pytorch_model.safetensors && \
    wget -O /app/doll_cute.safetensors https://civitai.com/api/download/models/886096?type=Model&format=SafeTensor

RUN pip3 install torch safetensors

COPY . /app

CMD ["bash"]







